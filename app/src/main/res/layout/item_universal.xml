<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_6dp_small"
    android:elevation="@dimen/elevation_10dp_small"
    android:orientation="vertical"
    android:gravity="center"
    >

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_circle"
        android:layout_gravity="center"
        android:layout_width="@dimen/item_circle_80dp"
        android:layout_height="@dimen/item_circle_80dp"
        app:cardCornerRadius="@dimen/item_circle_corner_radius_20dp"
        app:cardBackgroundColor="@color/white"
        android:forceDarkAllowed="false"
        >

        <ImageView
            android:id="@+id/iv_universal_item"
            android:backgroundTint="@color/white"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            tools:ignore="ContentDescription" />

    </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_universal_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_4dp_small"/>

</LinearLayout>