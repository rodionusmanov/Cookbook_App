<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp_small"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/material_card_corner_radius_15dp"
        app:cardElevation="@dimen/elevation_10dp_small"
        app:layout_constraintEnd_toStartOf="@id/user_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/orange_dark"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_view_height"
                android:hint="@string/search_view_hint"
                app:iconifiedByDefault="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_16dp_medium"
        android:background="@drawable/background_circle_avatar"
        android:src="@drawable/icon_user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/search_toolbar"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_toolbar"
        tools:ignore="ContentDescription" />


    <FrameLayout
        android:id="@+id/home_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_16dp_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_toolbar"
        app:strokeWidth="1dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/random_recipe_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/random_recipe_layout_height"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/services_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/random_recipe_container">

                    <com.example.cookbook.view.customviews.SquareMaterialCardView
                        android:id="@+id/favorites_service"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/margin_8dp_small"
                        android:layout_weight="1"
                        android:background="@color/service_cardview_background"
                        android:elevation="@dimen/elevation_10dp_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:padding="@dimen/margin_6dp_small"
                                android:text="@string/card_searching_by_ingredient_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/home_service_card_title" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_search_by_ingredient"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                    </com.example.cookbook.view.customviews.SquareMaterialCardView>

                    <com.example.cookbook.view.customviews.SquareMaterialCardView
                        android:id="@+id/detailed_ingredient_search"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/margin_8dp_small"
                        android:layout_weight="1"
                        android:background="@color/service_cardview_background"
                        android:elevation="@dimen/elevation_10dp_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:padding="@dimen/margin_6dp_small"
                                android:text="@string/card_favorite_list_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/home_service_card_title" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_favorite_list"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>


                    </com.example.cookbook.view.customviews.SquareMaterialCardView>

                    <com.example.cookbook.view.customviews.SquareMaterialCardView
                        android:id="@+id/shopping_list_service"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/margin_8dp_small"
                        android:layout_weight="1"
                        android:background="@color/service_cardview_background"
                        android:elevation="@dimen/elevation_10dp_small">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:padding="@dimen/margin_6dp_small"
                                android:text="@string/card_shopping_list_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/home_service_card_title" />

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/icon_shop_list"
                                tools:ignore="ContentDescription" />

                        </LinearLayout>

                    </com.example.cookbook.view.customviews.SquareMaterialCardView>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/random_cuisine_recipes_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/random_recipe_layout_height"
                    android:layout_marginTop="@dimen/margin_16dp_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/services_container" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/joke_of_the_day_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/margin_16dp_medium"
                    android:background="@color/service_cardview_background"
                    android:elevation="@dimen/elevation_10dp_small"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/random_cuisine_recipes_container">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/joke_of_the_day_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_8dp_small"
                            android:text="@string/joke_of_the_day_title"
                            android:textColor="@color/black"
                            android:textSize="@dimen/home_joke_of_the_day_title"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/joke_quote_start"
                            android:layout_width="@dimen/home_joke_of_the_day_layout_quote_size"
                            android:layout_height="@dimen/home_joke_of_the_day_layout_quote_size"
                            android:src="@drawable/icon_quote"
                            android:rotation="180"
                            tools:ignore="ContentDescription"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/joke_of_the_day_title"
                            />

                        <TextView
                            android:id="@+id/joke_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-20dp"
                            android:layout_marginStart="8dp"
                            app:layout_constraintStart_toEndOf="@id/joke_quote_start"
                            app:layout_constraintTop_toBottomOf="@id/joke_quote_start"
                            app:layout_constraintEnd_toStartOf="@id/joke_quote_close"
                            android:text="@string/joke_text"
                            android:textSize="@dimen/home_joke_text"
                            />

                        <ImageView
                            android:id="@+id/joke_quote_close"
                            android:layout_width="@dimen/home_joke_of_the_day_layout_quote_size"
                            android:layout_height="@dimen/home_joke_of_the_day_layout_quote_size"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/icon_quote"
                            tools:ignore="ContentDescription"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/joke_text"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/various_dishes_table_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/various_dishes_table_height"
                    android:layout_marginTop="@dimen/margin_16dp_medium"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/joke_of_the_day_container"
                    >

                    <LinearLayout
                        android:id="@+id/dishes_table_first_line_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >

                        <com.example.cookbook.view.customviews.SquareMaterialCardView
                            android:id="@+id/card_breakfast"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:background="@color/service_cardview_background"
                            android:elevation="@dimen/elevation_10dp_small">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:padding="@dimen/margin_6dp_small"
                                android:text="@string/card_searching_by_ingredient_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/home_service_card_title"
                                app:drawableBottomCompat="@drawable/icon_search_by_ingredient" />

                        </com.example.cookbook.view.customviews.SquareMaterialCardView>

                        <com.example.cookbook.view.customviews.SquareMaterialCardView
                            android:id="@+id/side_dish"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:background="@color/service_cardview_background"
                            android:elevation="@dimen/elevation_10dp_small">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center_vertical"
                                android:padding="@dimen/margin_6dp_small"
                                android:text="@string/card_favorite_list_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/home_service_card_title"
                                app:drawableBottomCompat="@drawable/icon_search_by_ingredient"
                                />

                        </com.example.cookbook.view.customviews.SquareMaterialCardView>

                        <com.example.cookbook.view.customviews.SquareMaterialCardView
                            android:id="@+id/card_main_course"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:background="@color/service_cardview_background"
                            android:elevation="@dimen/elevation_10dp_small">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:padding="@dimen/margin_6dp_small"
                                android:text="@string/card_shopping_list_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/home_service_card_title"
                                app:drawableBottomCompat="@drawable/icon_search_by_ingredient"
                                />

                        </com.example.cookbook.view.customviews.SquareMaterialCardView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dishes_table_second_line_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        >

                        <com.example.cookbook.view.customviews.SquareMaterialCardView
                            android:id="@+id/card_salads"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:background="@color/service_cardview_background"
                            android:elevation="@dimen/elevation_10dp_small">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center_vertical"
                                android:padding="@dimen/margin_6dp_small"
                                android:text="@string/card_searching_by_ingredient_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/home_service_card_title"
                                app:drawableBottomCompat="@drawable/icon_search_by_ingredient" />

                        </com.example.cookbook.view.customviews.SquareMaterialCardView>

                        <com.example.cookbook.view.customviews.SquareMaterialCardView
                            android:id="@+id/card_snack"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:background="@color/service_cardview_background"
                            android:elevation="@dimen/elevation_10dp_small">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="start|center_vertical"
                                android:padding="@dimen/margin_6dp_small"
                                android:text="@string/card_favorite_list_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/home_service_card_title"
                                app:drawableBottomCompat="@drawable/icon_search_by_ingredient"
                                />

                        </com.example.cookbook.view.customviews.SquareMaterialCardView>

                        <com.example.cookbook.view.customviews.SquareMaterialCardView
                            android:id="@+id/card_dessert"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_margin="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:background="@color/service_cardview_background"
                            android:elevation="@dimen/elevation_10dp_small">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="start|center_vertical"
                                android:padding="@dimen/margin_6dp_small"
                                android:text="@string/card_shopping_list_title"
                                android:textColor="@color/black"
                                android:textSize="@dimen/home_service_card_title"
                                app:drawableBottomCompat="@drawable/icon_search_by_ingredient"
                                />

                        </com.example.cookbook.view.customviews.SquareMaterialCardView>

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/healthy_random_recipes_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/random_recipe_layout_height"
                    android:layout_marginTop="@dimen/margin_16dp_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/various_dishes_table_container"
                    />

                <FrameLayout
                    android:id="@+id/recently_viewed_recipes_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/random_recipe_layout_height"
                    android:layout_marginTop="@dimen/margin_16dp_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/healthy_random_recipes_container"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

    <include
        layout="@layout/layout_loading"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="176dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

