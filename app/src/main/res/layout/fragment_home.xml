<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/search_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8dp_small"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/material_card_corner_radius_15dp"
        app:cardElevation="@dimen/elevation_10dp_small"
        app:layout_constraintEnd_toStartOf="@id/user_avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/orange_dark"
        app:strokeWidth="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/search_view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/search_view_height"
                android:hint="@string/search_view_hint"
                app:iconifiedByDefault="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/margin_16dp_medium"
        android:background="@drawable/background_circle_avatar"
        android:src="@drawable/icon_user_avatar"
        app:layout_constraintBottom_toBottomOf="@id/search_toolbar"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/search_toolbar"
        tools:ignore="ContentDescription" />


    <FrameLayout
        android:id="@+id/home_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_16dp_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_toolbar"
        app:strokeWidth="1dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <FrameLayout
                    android:id="@+id/random_recipe_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/random_recipe_layout_height"
                    android:layout_marginHorizontal="@dimen/margin_16dp_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/services_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16dp_medium"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/random_recipe_container">

                    <com.example.cookbook.view.customviews.SquareMaterialCardView
                        android:id="@+id/detailed_ingredient_search"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/margin_8dp_small"
                        android:layout_weight="1"
                        android:elevation="@dimen/elevation_10dp_small"
                        app:cardCornerRadius="@dimen/material_card_corner_radius_20dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/search_by_ingredient_logo"
                                android:layout_width="@dimen/home_service_card_logo_size"
                                android:layout_height="@dimen/home_service_card_logo_size"
                                android:layout_marginStart="@dimen/margin_8dp_small"
                                android:layout_marginTop="@dimen/margin_10dp_small"
                                android:src="@drawable/icon_search_by_ingredient"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />

                            <TextView
                                style="@style/HomeFragmentServiceCardTitleStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/card_searching_by_ingredient_title"
                                app:layout_constraintTop_toBottomOf="@id/search_by_ingredient_logo" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.example.cookbook.view.customviews.SquareMaterialCardView>

                    <com.example.cookbook.view.customviews.SquareMaterialCardView
                        android:id="@+id/favorites_service"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/margin_8dp_small"
                        android:layout_weight="1"
                        android:elevation="@dimen/elevation_10dp_small"
                        app:cardCornerRadius="@dimen/material_card_corner_radius_20dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/favorites_list_logo"
                                android:layout_width="@dimen/home_service_card_logo_size"
                                android:layout_height="@dimen/home_service_card_logo_size"
                                android:layout_marginStart="@dimen/margin_8dp_small"
                                android:layout_marginTop="@dimen/margin_10dp_small"
                                android:src="@drawable/icon_favorite_list"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />

                            <TextView
                                style="@style/HomeFragmentServiceCardTitleStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/card_favorite_list_title"
                                app:layout_constraintTop_toBottomOf="@id/favorites_list_logo" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.example.cookbook.view.customviews.SquareMaterialCardView>

                    <com.example.cookbook.view.customviews.SquareMaterialCardView
                        android:id="@+id/shopping_list_service"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_margin="@dimen/margin_8dp_small"
                        android:layout_weight="1"
                        android:elevation="@dimen/elevation_10dp_small"
                        app:cardCornerRadius="@dimen/material_card_corner_radius_20dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/shopping_list_logo"
                                android:layout_width="@dimen/home_service_card_logo_size"
                                android:layout_height="@dimen/home_service_card_logo_size"
                                android:layout_marginStart="@dimen/margin_8dp_small"
                                android:layout_marginTop="@dimen/margin_10dp_small"
                                android:src="@drawable/icon_shop_list"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="ContentDescription" />

                            <TextView
                                style="@style/HomeFragmentServiceCardTitleStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/card_shopping_list_title"
                                app:layout_constraintTop_toBottomOf="@id/shopping_list_logo" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </com.example.cookbook.view.customviews.SquareMaterialCardView>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/random_cuisine_recipes_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/random_recipe_layout_height"
                    android:layout_marginTop="60dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/services_container" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/joke_of_the_day_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_16dp_medium"
                    android:elevation="@dimen/elevation_10dp_small"
                    app:cardCornerRadius="@dimen/material_card_corner_radius_20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/random_cuisine_recipes_container">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/joke_of_the_day_title"
                            style="@style/HomeFragmentTitleTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingStart="@dimen/margin_8dp_small"
                            android:text="@string/joke_of_the_day_title"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/joke_quote_start"
                            android:layout_width="@dimen/home_joke_of_the_day_layout_quote_size"
                            android:layout_height="@dimen/home_joke_of_the_day_layout_quote_size"
                            android:rotation="180"
                            android:src="@drawable/icon_quote"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/joke_of_the_day_title"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/joke_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="-20dp"
                            android:text="@string/joke_text"
                            android:textSize="@dimen/home_joke_text"
                            app:layout_constraintEnd_toStartOf="@id/joke_quote_close"
                            app:layout_constraintStart_toEndOf="@id/joke_quote_start"
                            app:layout_constraintTop_toBottomOf="@id/joke_quote_start" />

                        <ImageView
                            android:id="@+id/joke_quote_close"
                            android:layout_width="@dimen/home_joke_of_the_day_layout_quote_size"
                            android:layout_height="@dimen/home_joke_of_the_day_layout_quote_size"
                            android:layout_marginTop="-20dp"
                            android:src="@drawable/icon_quote"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/joke_text"
                            tools:ignore="ContentDescription" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:id="@+id/various_dishes_table_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_16dp_medium"
                    android:layout_marginTop="@dimen/margin_16dp_medium"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/joke_of_the_day_container">

                    <TextView
                        android:id="@+id/dishes_table_title"
                        style="@style/HomeFragmentTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/margin_16dp_medium"
                        android:paddingHorizontal="@dimen/margin_8dp_small"
                        android:text="@string/dishes_table_title" />

                    <LinearLayout
                        android:id="@+id/dishes_table_first_line_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.cookbook.view.customviews.SquareMaterialCardView
                                android:id="@+id/card_breakfast"
                                style="@style/HomeFragmentDishCardStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="20dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/background_breakfast"
                                    tools:ignore="ContentDescription" />

                            </com.example.cookbook.view.customviews.SquareMaterialCardView>

                            <TextView
                                style="@style/HomeFragmentDishCardTitleStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/card_breakfast_title" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.cookbook.view.customviews.SquareMaterialCardView
                                android:id="@+id/side_dish"
                                style="@style/HomeFragmentDishCardStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/material_card_corner_radius_20dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/background_side_dish"
                                    tools:ignore="ContentDescription" />

                            </com.example.cookbook.view.customviews.SquareMaterialCardView>

                            <TextView
                                style="@style/HomeFragmentDishCardTitleStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/card_side_dish_title" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.cookbook.view.customviews.SquareMaterialCardView
                                android:id="@+id/card_main_course"
                                style="@style/HomeFragmentDishCardStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardCornerRadius="@dimen/material_card_corner_radius_20dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/background_main_course"
                                    tools:ignore="ContentDescription" />

                            </com.example.cookbook.view.customviews.SquareMaterialCardView>

                            <TextView
                                style="@style/HomeFragmentDishCardTitleStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/card_main_course_title" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dishes_table_second_line_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.cookbook.view.customviews.SquareMaterialCardView
                                android:id="@+id/card_salads"
                                style="@style/HomeFragmentDishCardStyle"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:cardCornerRadius="@dimen/material_card_corner_radius_20dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/background_salads"
                                    tools:ignore="ContentDescription" />

                            </com.example.cookbook.view.customviews.SquareMaterialCardView>

                            <TextView
                                style="@style/HomeFragmentDishCardTitleStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/card_salads_title" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.cookbook.view.customviews.SquareMaterialCardView
                                android:id="@+id/card_snack"
                                style="@style/HomeFragmentDishCardStyle"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:cardCornerRadius="@dimen/material_card_corner_radius_20dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/background_snacks"
                                    tools:ignore="ContentDescription" />

                            </com.example.cookbook.view.customviews.SquareMaterialCardView>

                            <TextView
                                style="@style/HomeFragmentDishCardTitleStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/card_snacks_title" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/margin_8dp_small"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <com.example.cookbook.view.customviews.SquareMaterialCardView
                                android:id="@+id/card_dessert"
                                style="@style/HomeFragmentDishCardStyle"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                app:cardCornerRadius="@dimen/material_card_corner_radius_20dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/background_desserts"
                                    tools:ignore="ContentDescription" />

                            </com.example.cookbook.view.customviews.SquareMaterialCardView>

                            <TextView
                                style="@style/HomeFragmentDishCardTitleStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/card_desserts_title" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <FrameLayout
                    android:id="@+id/healthy_random_recipes_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/random_recipe_layout_height"
                    android:layout_marginTop="@dimen/margin_16dp_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/various_dishes_table_container" />

                <LinearLayout
                    android:id="@+id/recently_viewed_recipes_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/random_recipe_layout_height"
                    android:layout_marginHorizontal="@dimen/margin_16dp_medium"
                    android:layout_marginTop="@dimen/margin_16dp_medium"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/healthy_random_recipes_container">

                    <TextView
                        android:id="@+id/recently_viewed_title"
                        style="@style/HomeFragmentTitleTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/recently_viewed_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:listitem="@layout/item_random_recipe_rv" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

    <include
        layout="@layout/layout_loading"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="176dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

